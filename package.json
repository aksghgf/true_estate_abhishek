{
  "name": "truestate-sales-management",
  "version": "1.0.0",
  "description": "TruEstate Retail Sales Management System - Full-stack enterprise dashboard",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "start:backend": "npm start --workspace=backend"
  },
  "keywords": [
    "sales-management",
    "dashboard",
    "retail",
    "analytics"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
